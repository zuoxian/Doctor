<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/login_background"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/whitecolor"

        >
        <TextView
            android:id="@+id/main_appointments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/appointments"
            android:drawableTop="@drawable/appointments"
            android:drawablePadding="3dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/content"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:background="@drawable/bordersquarestyle"
            />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:orientation="horizontal"
           >
        <TextView
            android:id="@+id/main_image_text_consulting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/image_text_consulting"
            android:drawableTop="@drawable/image_text_consulting"
            android:drawablePadding="2dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/content"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:background="@drawable/bordersquarestyle"
            />
           <TextView
               android:id="@+id/bar_num3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/red_dot_bg"
               android:text="1"
               android:textColor="#FFFFFF"
               android:textSize="10dp"
               android:layout_marginTop="18dp"
               android:layout_marginLeft="-32dp"
               android:visibility="visible"
               android:layout_toRightOf="@id/tooltitle"
               />
       </LinearLayout>
        <TextView
            android:id="@+id/main_consulting_statistics"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/consulting_statistics"
            android:drawableTop="@drawable/consulting_statistics"
            android:drawablePadding="2dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/content"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:background="@drawable/bordersquarestyle"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/whitecolor"
        >
        <TextView
            android:id="@+id/main_information_service"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/information_service"
            android:drawableTop="@drawable/information_service"
            android:drawablePadding="2dp"
            android:layout_gravity="center"
            android:textColor="@color/content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:background="@drawable/bordersquarestyle"
            />
        <TextView
            android:id="@+id/main_contact_us"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/contact_us"
            android:drawableTop="@drawable/contact_us"
            android:drawablePadding="2dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/content"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:background="@drawable/bordersquarestyle"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:drawablePadding="2dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:background="@drawable/bordersquarestyle"
            />
    </LinearLayout>

</LinearLayout>